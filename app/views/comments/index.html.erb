<% unless @comments.empty? %>
  <div id="comments_list">
    <table cellspacing="0">
      <tr>
        <th>Article</th>
        <th>Date</th>
        <th>Votes</th>
        <th>Comment</th>
      </tr>
      <% @comments.each do |comment| %>
      <tr>
        <td>
          <%= comment.article.title %>
        </td>
        <td><%= comment.created_at.strftime("%B %d") %></td>
        <td>
          <%= comment.yay_array.length %>/<%= comment.nay_array.length %>
          <%= comment.vote_count %>
        </td>
        <td class="body">
          <%= comment.body_html %><br />
          <%= link_to 'destroy', "/comments/#{comment.id}", :class => 'delete' %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
<% else %>
  <h2>You have no comments :(</h2>
<% end %>