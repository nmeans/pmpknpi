<% form_for :comment, :action => "/articles/#{@article.to_param}/comments", :class => 'new_comment' do %>
  <%= text_control :name, :label => 'name (required)' %>
  <%= text_control :email, :label => 'email (will not be published)' %>
  <%= text_control :website, :label => 'website' %>
  <%= text_area_control :body, :label => 'body', :id => 'comment_body' %>
  <br /><br />
  <%= submit_button 'Submit' %>
<% end %>