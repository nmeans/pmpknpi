<% form_for :comment, :action => "/articles/#{@article.to_param}/comments", :class => 'new_comment' do %>
  <%= text_control :author, :label => 'name' %>
  <%= text_control :email, :label => 'email (not published)' %>
  <%= text_control :website, :label => 'website (optional)' %>
  <%= text_area_control :body, :label => 'body (textile)', :id => 'comment_body' %>
  <br /><br />
  <%= submit_button 'Submit' %>
<% end %>